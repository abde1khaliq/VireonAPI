# Database engine: 'mysql' or 'sqlite'
DB_ENGINE=sqlite  # Change to 'mysql' if using MySQL

# MySQL credentials (only needed if DB_ENGINE=mysql)
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# Django settings
SECRET_KEY=your-secret-key-here # generated from management/generate_secret_key.py
DEBUG=True  # Set to False in production
ALLOWED_HOSTS=127.0.0.1,localhost  # Comma-separated list

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here